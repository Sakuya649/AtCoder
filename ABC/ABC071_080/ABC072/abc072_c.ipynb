      "source": [
        "n = int(input())\n",
        "A = list(map(int, input().split()))\n",
        "ans = [0 for i in range(max(A)+2)]\n",
        "for a in A:\n",
        "  if a != 0:\n",
        "    ans[a-1] += 1\n",
        "    ans[a] += 1\n",
        "    ans[a+1] += 1\n",
        "  else:\n",
        "    ans[a] += 1\n",
        "    ans[a+1] += 1\n",
        "print(max(ans))"
      ]
